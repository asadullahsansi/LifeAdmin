<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.asadullahsansi.lifeadmin">

    <application
        android:name=".Util.ApplicationClass"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CategoryActivity"
            android:label="Category"
            android:screenOrientation="portrait"
            android:theme="@style/CategoryTheme"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".SubCategoryActivity"
            android:label="SubCategory"
            android:screenOrientation="portrait"
            android:theme="@style/SubCategoryTheme"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".ItemActivity"
            android:label="Item"
            android:screenOrientation="portrait"
            android:theme="@style/ItemTheme"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".LoginActivity"
            android:label="Admin Login"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".ChatActivity"
            android:label="Chat Support"
            android:screenOrientation="portrait"
            android:theme="@style/ChatTheme"
            android:windowSoftInputMode="stateAlwaysHidden"></activity>
        <activity
            android:name=".CreateChatActivity"
            android:screenOrientation="portrait"
            android:theme="@style/ChatTheme"
            android:label="Chat"
            android:windowSoftInputMode="stateAlwaysHidden">

        </activity>
    </application>

</manifest>